<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="mainPane" prefHeight="383.0" prefWidth="535.0" styleClass="note-panel" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.davidpe.tasker.application.ui.tasks.NewTaskPanelController">
  
   <children>
      <Label fx:id="lblMessage" layoutX="58.0" layoutY="300.0" styleClass="note-label" text="This is a note that you have to confirm, or not?" textFill="#8389de">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ImageView fx:id="imgIcon" fitHeight="27.0" fitWidth="31.0" layoutX="21.0" layoutY="26.0" preserveRatio="true" styleClass="note-icon">
         <image>
            <Image url="@images/chat_40dp_white.png" />
         </image>
      </ImageView>
      <Button fx:id="btCancel" alignment="BASELINE_CENTER" layoutX="450.0" layoutY="290.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="39.0" prefWidth="41.0" styleClass="button-regular" stylesheets="@custom-styles.css" textFill="WHITE">
         <font>
            <Font name="Alatsi Regular" size="18.0" />
         </font>
         <graphic>
            <ImageView fx:id="imgCancel" fitHeight="16.0" fitWidth="25.0" preserveRatio="true">
               <image>
                  <Image url="@images/close_18dp_white.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btOk" alignment="BASELINE_CENTER" layoutX="394.0" layoutY="290.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="39.0" prefWidth="41.0" styleClass="button-regular" stylesheets="@custom-styles.css" textFill="WHITE">
         <font>
            <Font name="Alatsi Regular" size="18.0" />
         </font>
         <graphic>
            <ImageView fx:id="imgOK" fitHeight="16.0" fitWidth="25.0" preserveRatio="true">
               <image>
                  <Image url="@images/check_18dp_white.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Label fx:id="lblMessage1" layoutX="67.0" layoutY="31.0" styleClass="note-label" text="new task" textFill="#8389de">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
   <stylesheets>
      <URL value="@custom-styles.css" />
      <URL value="@styles.css" />
   </stylesheets>
</Pane>
