<Pane prefHeight="534.0" prefWidth="643.0" styleClass="note-panel" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.davidpe.tasker.application.ui.tasks.NewTaskPanelController">
              
       <children>
            <Label fx:id="lblTitle" layoutX="23.0" layoutY="6.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="note-label" text="Nueva tarea" />
            <ImageView fx:id="imgIcon" fitHeight="27.0" fitWidth="31.0" layoutX="585.0" layoutY="24.0" preserveRatio="true" styleClass="note-icon">
               <image>
                  <Image url="@images/chat_40dp_white.png" />
               </image>
            </ImageView>
            <Button fx:id="btnCancel" alignment="BASELINE_CENTER" layoutX="528.0" layoutY="481.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="39.0" prefWidth="41.0" styleClass="button-regular" stylesheets="@styles.css" textFill="WHITE">
                  <font>
                     <Font name="Alatsi Regular" size="18.0" />
                  </font>
                  <graphic>
                     <ImageView fx:id="imgCancel" fitHeight="16.0" fitWidth="25.0" preserveRatio="true">
                        <image>
                           <Image url="@images/close_18dp_white.png" />
                        </image>
                     </ImageView>
                  </graphic>
            </Button>
            <Button fx:id="btnOk" alignment="BASELINE_CENTER" layoutX="579.0" layoutY="481.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="39.0" prefWidth="41.0" styleClass="button-regular" stylesheets="@styles.css" textFill="WHITE">
                  <font>
                     <Font name="Alatsi Regular" size="18.0" />
                  </font>
                  <graphic>
                     <ImageView fx:id="imgOk" fitHeight="16.0" fitWidth="25.0" preserveRatio="true">
                        <image>
                           <Image url="@images/check_18dp_white.png" />
                        </image>
                     </ImageView>
                  </graphic>
            </Button>
            
            <Label fx:id="lblMessage" layoutX="36.0" layoutY="38.0" styleClass="note-label" text="Completa los datos de la tarea">
         <font>
            <Font size="12.0" />
         </font></Label>
            <GridPane hgap="10" layoutX="31.0" layoutY="57.0" prefHeight="274.0" prefWidth="449.0" vgap="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label text="Título" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtTitle" prefHeight="32.0" prefWidth="320.0" promptText="Título" styleClass="popup-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Código externo" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtExtCode" promptText="ABC-123" styleClass="popup-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Proyecto" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ComboBox fx:id="cbxProject" onAction="#onProjectChanged" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Prioridad" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="cbxPriority" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Tag" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ComboBox fx:id="cbxTag" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Inicio" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <DatePicker fx:id="dpStartDate" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Fin" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <DatePicker fx:id="dpEndDate" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
            </GridPane>
            <Label layoutX="36.0" layoutY="337.0" text="Descripción" /> 
            <TextArea fx:id="taDescription" layoutX="31.0" layoutY="364.0" prefHeight="101.0" prefRowCount="4" prefWidth="587.0" styleClass="popup-text-field" />


            <Label fx:id="lblError" layoutX="486.0" layoutY="329.0" prefHeight="17.0" prefWidth="125.0" textFill="red" />
            
   </children>
</Pane>
